# Store Configuration Database Environment Variables
# Add these to your Azure Function App settings or local.settings.json

# Database Connection Settings
DB_SERVER=your-azure-sql-server.database.windows.net
DB_NAME=sync-app-database
DB_AUTH_TYPE=msi  # Use 'msi' for Managed Identity or 'sql' for SQL authentication

# Only needed if DB_AUTH_TYPE=sql (not recommended for production)
# DB_USER=your-username  
# DB_PASSWORD=your-password

# Store Cache Settings
STORE_CACHE_MAX_AGE_MINUTES=15  # How long to cache store data
STORE_CACHE_ENABLE_FILE_BACKUP=true  # Save cache to file for cold starts

# Performance Settings
DB_CONNECTION_TIMEOUT_SECONDS=30
DB_COMMAND_TIMEOUT_SECONDS=15
DB_POOL_MAX_SIZE=10

# Feature Flags
ENABLE_STORE_DATABASE=true  # Set to false to use hardcoded fallback only
ENABLE_STORE_CACHE_LOGGING=true  # Detailed cache operation logging
